<%= form_for @person do |f| %>
  <%= f.text_field :name %> <br /><br />

  <%= f.fields_for @addresses do |a| %>
    <%= a.label :street_address_1 %>
    <%= a.text_field :street_address_1 %><br><br>
    <%= a.label :street_address_2 %>
    <%= a.text_field :street_address_2 %><br><br>
    <%= a.label :city %>
    <%= a.text_field :city %><br><br>
    <%= a.label :state %>
    <%= a.text_field :state %><br><br>
    <%= a.label :zipcode %>
    <%= a.text_field :zipcode %><br><br>
    <%= a.label :address_type %>
    <%= a.text_field :address_type %><br><br>
  <% end %>

  <%= f.submit %>
<% end %>
